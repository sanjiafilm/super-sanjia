<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sj.search.mapper.SearchMapper">
	<select id="getMovieInfo" parameterType="string" resultType="Movie" >
		select * from t_movie where name=#{name}
	</select>
	
	<select id="getall" resultType="int" >
		select count(*) from t_movie
	</select>
	
	<select id="getPurchaseInfo" resultType="Purchase">
		select *
		from t_purchase
		where movie_name=#{movieName}
		and play_time between #{todaytime} and #{tomorrowtime}
		group by cinema_name
	</select>
	
